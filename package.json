    "dotenv": "^8.2.0",
    "ejs": "^3.1.5",
    "eslint": "^7.18.0",
    "find-up": "^5.0.0",
    "glob": "^7.1.6",
    "jsesc": "^3.0.2",
    "loader-utils": "^2.0.0",
    "lodash": "^4.17.20",
    "moment": "^2.29.1",
    "pegjs": "^0.10.0",
    "properties-reader": "^2.2.0",
    "pug": "^3.0.0",
    "rimraf": "^3.0.2",
    "shelljs": "^0.8.4",
    "string-to-arraybuffer": "^1.0.2",
    "ts-loader": "^8.0.14",
    "ts-node": "^9.1.1",
    "tslint": "^6.1.3",
    "typescript": "^4.1.3",
    "uri-templates": "^0.2.0",
    "webpack": "^5.18.0",
    "wrapper-webpack-plugin": "^2.1.0",
    "xml-parser": "^1.2.1",
    "xmldom": "^0.4.0",
    "xpath": "^0.0.32"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/retorquere/zotero-plugin.git"
  },
  "license": "ISC",
