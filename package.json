{
  "name": "zotero-plugin",
  "version": "1.0.34",
  "description": "Zotero plugin builder",
  "homepage": "https://github.com/retorquere/zotero-plugin/wiki",
  "bin": {
    "zotero-plugin-release": "bin/release.js",
    "zotero-plugin-zipup": "bin/zipup.js",
    "zotero-plugin-link": "bin/link.js",
    "issue-branches": "bin/branches.js"
  },
  "author": {
    "name": "Emiliano Heyns",
    "email": "Emiliano.Heyns@iris-advies.com"
  },
  "scripts": {
    "preversion": "npm test",
    "postversion": "git push --follow-tags",
    "test": "eslint . --ext .ts && npm run build",
    "build": "tsc && chmod +x bin/*.js",
    "prepublishOnly": "npm install && npm run build",
    "go": "npm run build && npm version patch && npm publish",
    "ncu": "ncu -u && pnpm i && git add package.json pnpm-lock.yaml && git commit -m ncu"
  },
  "directories": {
    "test": "test"
  },
  "dependencies": {
    "@octokit/rest": "^18.0.15",
